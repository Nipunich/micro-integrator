<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>data-publisher-features</artifactId>
        <groupId>org.wso2.ei</groupId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.micro.integrator.prometheus.observability.feature</artifactId>
     <url>http://wso2.org</url>

    <description>
        This feature contains the core bundles required for publishing metrics data to Prometheus
    </description>

    <dependencies>
        <dependency>
            <groupId>org.apache.synapse</groupId>
            <artifactId>synapse-core</artifactId>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient</artifactId>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient_common</artifactId>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient_httpserver</artifactId>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient_servlet</artifactId>
        </dependency>
        <dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient_hotspot</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.micro.integrator.prometheus.observability</id>
                            <propertiesFile>../../../etc/feature.properties</propertiesFile>
                            <bundles>
                                <bundleDef>
                                    org.wso2.ei:org.wso2.micro.integrator.prometheus.observability:${project.version}
                                </bundleDef>
                                <bundleDef>io.prometheus:simpleclient</bundleDef>
                                <bundleDef>io.prometheus.wso2:simpleclient_common</bundleDef>
                                <bundleDef>io.prometheus:simpleclient_httpserver</bundleDef>
                                <bundleDef>io.prometheus.wso2:simpleclient_servlet</bundleDef>
                                <bundleDef>io.prometheus.wso2:simpleclient_hotspot</bundleDef>
                            </bundles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
